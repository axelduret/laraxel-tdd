{
    "name": "laraxel/vanilla-tdd",
    "description": "Conciliating Laravel and Test Driven Development",
    "authors": [
        {
            "name": "Clairveillance",
            "homepage": "https://laraxel.com",
            "email": "info@clairveillance.com"
        }
    ],
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.1.2"
    },
    "require-dev": {},
    "autoload": {
        "psr-4": {
            "Domain\\": "src/Domain",
            "Infrastructure\\": "src/Infrastructure",
            "Tools\\": "tools"
        }
    },
    "scripts": {
        "docker": "docker exec -it laraxel_tdd /bin/bash",
        "phpstan": "tools/vendor/bin/phpstan analyse --ansi --memory-limit=1G",
        "pint": "src/Infrastructure/Laravel/vendor/bin/pint --preset psr12"
    },
    "scripts-descriptions": {
        "docker": "Runs the Docker shell.",
        "phpstan": "Runs the PHPStan static analyzer.",
        "pint": "Runs the Laravel Pint code style fixer."
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
